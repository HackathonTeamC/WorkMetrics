# Database Configuration
DATABASE_URL=postgresql://workmetrics:workmetrics_dev@localhost:5432/workmetrics

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# GitLab API Configuration
GITLAB_API_URL=https://gitlab.com/api/v4
GITLAB_ACCESS_TOKEN=your_gitlab_access_token_here

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Daily Batch Schedule (cron format: hour minute)
DAILY_BATCH_HOUR=2
DAILY_BATCH_MINUTE=0

# Cache Settings
CACHE_HISTORICAL_DATA_TTL=86400  # 24 hours in seconds
CACHE_RECENT_DATA_TTL=3600       # 1 hour in seconds

# API Rate Limiting
GITLAB_API_RATE_LIMIT_PER_MINUTE=60
